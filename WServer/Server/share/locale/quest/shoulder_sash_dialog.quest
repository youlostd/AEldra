quest sash begin
	state start begin
		when 9004.chat."Acce combine" begin
			say("You want to combine two acce?")
			say("")
			local confirm = select("Yes", "No")
			if confirm == 2 then
				return
			end

			setskin(NOWINDOW)
			pc.acce_open_combine()
		end

		when 9004.chat."Acce absorb" begin
			say("You want to absorb an item?")
			local confirm = select("Yes", "No")
			if confirm == 2 then
				return
			end

			setskin(NOWINDOW)
			pc.acce_open_absorb()
		end
	end
end
